@model IEnumerable<ToDoAppServiceContracts.DTO.TaskResponse>

@{
    ViewBag.Title = "TODO App";
}
<h1>Tasks</h1>


<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Is Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.IsCompleted ? "completed" : "")">
                <td>
                    @Html.DisplayFor(model => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Description)
                </td>
                <td>
                    <form asp-action="ToggleCompleted" method="post" style="display:inline;">
                        <input type="hidden" name="taskId" value="@item.TaskId" />
                        <input type="checkbox" name="isCompleted" value="true" @(item.IsCompleted ? "checked" : "") onchange="this.form.submit()" />
                    </form>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TaskId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.TaskId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this task?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>