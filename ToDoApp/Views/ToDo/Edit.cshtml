@model ToDoAppServiceContracts.DTO.TaskResponse;

@{
    ViewBag.Title = "Edit Task";
}

<form asp-controller="ToDo" asp-action="EditTask" method="post" class="text-center h-200">
    <div class="form-group w-100">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control h-25" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group w-100">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control h-100"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <div class="form-check">
        <input asp-for="IsCompleted" class="form-check-input" type="checkbox" />
        <label asp-for="IsCompleted" class="form-check-label w-25"></label>
    </div>
    <br />
    <input type="hidden" asp-for="TaskId" />
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary button-blue-back h-100 box ">Save</button>
        <a asp-action="Index" class="btn btn-primary box">Back to List</a>
    </div>
</form>